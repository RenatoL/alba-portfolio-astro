		-webkit-animation: fade-out 1s;
	}

	@keyframes fade-in {
		from {opacity: 0;}
		to {opacity: 1;	}
	}

	@keyframes fade-out {
		from {	opacity: 1;	}
		to {opacity: 0;	}
	}

	@-webkit-keyframes fade-out {
